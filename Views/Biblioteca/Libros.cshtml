                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Titulo</th>
                                <th>Autor</th>
                                <th>Categoria</th>
                                <th>Editorial</th>
                                <th>Ubicacion</th>
                                <th>Ejemplares</th>
                                <th>Estado</th>
