
@{
    ViewBag.Title = "Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var usuarioId = Context.Request.Cookies["Usuario"];
}

@if(int.TryParse(usuarioId, out int exist)){
<!-- DataTales Example -->
